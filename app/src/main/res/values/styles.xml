<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <style name="blackDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="cornerRadius">15dp</item>
        <item name="colorAccent">@color/dark3</item>
        <item name="colorControlActivated">@color/dark3</item>
        <item name="android:selectableItemBackgroundBorderless">@color/dark2</item>
        <item name="colorControlHighlight">@color/dark2</item>
        <item name="android:windowBackground">@color/dark1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/blackDatePickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/blackDatePickerButtonStyle</item>
    </style>
    <style name="blackDatePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="whiteDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="cornerRadius">15dp</item>
        <item name="colorAccent">#EFEFF9</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:selectableItemBackgroundBorderless">@color/white2</item>
        <item name="colorControlHighlight">@color/white2</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/whiteDatePickerButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/whiteDatePickerButtonStyle</item>
    </style>
    <style name="whiteDatePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>